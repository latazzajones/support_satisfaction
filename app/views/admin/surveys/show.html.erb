
<h1>Survey Id:  <%= @survey.id %> </h1>
<ul class="list-unstyled">
  <li>
    <span>Survey Title: <%= @survey.title %></span>
  </li>
  <li>
    <span>Number of Responses: <%= @survey.responses.count %></span>
  </li>
  <li>
    <span>Redphone URL: <%= @survey.url %> </span>
  </li>
</ul>

<table class="table table-striped table-bordered">
  <tr>
    <th>
      Respondent's email
    </th>
    <th>
      Rating
    </th>
    <th>
      Comments
    </th>
  </tr>

  <% @survey.responses.each do |response| %>
    <tr>
      <td>
        <%= response.email %>
      </td>
      <td>
        <% response.rating.times do %>
          <span>⭐️ </span>
        <% end %>
      </td>
      <td>
        <%= response.comment %>
      </td>
    </tr>
  <% end %>

</table>
